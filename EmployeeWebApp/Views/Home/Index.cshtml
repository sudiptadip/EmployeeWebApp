@{
    ViewData["Title"] = "Home Page";
}
@model List<Employees>


<partial name="_Nortification" />


<div class="row">
    <a class="btn btn-dark" asp-controller="Home" asp-action="Create" > Create Employee</a>
    <div class="col-12 border">
   @foreach (var item in Model)
    {
        <div class="mb-3 mt-3" style="font-size: 20px" >
                <a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id" style="text-decoration: none; color: black;">
                <strong>Employee Name : </strong> @item.FirstName @item.LastName </a>
        </div>
    }
        @if(Model.Count == 0)
        {
            <p class="text-center mt-3" >create employee</p>
        }
    </div>
</div>
